<ul class="article__list">
{% for article in articles | reverse %}
  <div class="article__item">
    <article class="article__preview">
      <div class="article_preview_row">
      <div class="article_preview_column left">
        <img src="{{ article.data.lead_image }}" class="headline" alt="{{ article.data.lead_image_alt }}" />
      </div>
      <div class="article_preview_column right">
      <h2> <a href="{{ article.url | url }}">{{ article.data.title }}</a> </h2>
      <small>
        <time>{{ article.data.date | readableDate }}</time> 
      </small>
      <small>
         <a class="author" href="/blog/louis-mitchell}}">By {{ article.data.author }}</a> <a class="category" href="/blog/{{ article.data.category }}">{{ article.data.category }}</a>
      </small>
      </div>
      </div>
      <br>
      <p.headline><i>{{ article.data.excerpt }}</i></p>
    </article>
    <br>
    <hr>
  </div>
{% endfor %}
</ul>